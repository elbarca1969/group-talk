<div class="account-page">
  <div class="account-page-title">
    アカウントを作成
  </div>
  <%= form_with model: @user, url: user_registration_path, local: true do |f|%>
    <%= devise_error_messages!%>
    <div class="account-page-container">
      <div class="account-page-wrapper">
        <div class="field-input account-page-input-name">
          <%= f.text_field :nickname, placeholder: "ニックネーム", autofocus: true %>
        </div>
        <div class="field-input account-page-input-introduction">
          <%= f.text_area :introduction, class: "introduction-area", placeholder: "自己紹介" %>
        </div>
        <div class="field-input account-page-input-email">
          <%= f.email_field :email, placeholder: "メールアドレス" %>
        </div>
        <div class="field-input account-page-input-password">
          <%= f.password_field :password, placeholder: "パスワード(半角英数字6文字以上)", autocomplete: "off" %>
        </div>
        <div class="field-input account-page-input-password-confirmation">
          <%= f.password_field :password_confirmation, placeholder: "確認用パスワード", autocomplete: "off" %>
        </div>
        <div class="account-page-btn">
          <div class="account-page-btn-right"></div>
          <div class="account-page-btn-left">
            <%= f.submit "GroupTalkを始める", class: 'account-page-submit-btn'%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>