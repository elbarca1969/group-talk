<%= link_to(user_path(user), class: "follow-content") do %>
  <div class="follow-content-upper">
    <div class="follow-nickname">
      <%= user.nickname %>
    </div>
    <div class="follow-introduction">
      <%= user.introduction %>
    </div>
  </div>
  <div class="follow-content-lower">
    <div class="follow-following">
      <%= "#{user.followings.length}フォロー中" %>
    </div>
    <div class="follow-follower">
      <%= "#{user.followers.length}フォロワー" %>
    </div>
  </div>
<% end %>
<hr>