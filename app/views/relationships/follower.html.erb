<div class="follow-lists">
  <div class="follow-container">
    <div class="follow-list-title">
      <%= "#{@user.nickname}:フォロワー" %>
      <hr>
    </div>
    <div class="follow-list">
      <% @followers.where.not(id: current_user.id).each do |follower| %>
        <%= render partial: "list", locals: { user: follower } %>
      <% end %>
    </div>
  </div>
</div>