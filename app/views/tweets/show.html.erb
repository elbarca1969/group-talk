<div class="tweet-show-contents">
  <div class="tweet-show-upper">
    <div class="tweet-show-upper-left">
      投稿者:
    </div>
    <div class="tweet-show-upper-right">
      <%= @tweet.user.nickname %>
    </div>
  </div>
  <% if user_signed_in? && @tweet.user_id == current_user.id%>
    <div class="tweet-show-button">
      <%= link_to '編集', edit_group_tweet_path(@group, @tweet.id), class: 'tweet-show-edit'%>
      <%= link_to '削除', group_tweet_path(@group, @tweet.id), method: :delete, class: 'tweet-show-delete' %>
    </div>
  <% end %>
  <div class="tweet-show-content">
    <%= @tweet.content %>
  </div>
  <div class="tweet-show-date">
    <%= l @tweet.created_at %>
  </div>
</div>